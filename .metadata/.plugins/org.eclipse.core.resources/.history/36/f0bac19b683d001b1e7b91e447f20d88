(deftemplate mapa(slot tara)(slot culoare))

(assert (tara Romania)
	(tara Ungaria)
    (tara Serbia)
    (tara Bulgaria)
    (tara Moldova)
	(tara Ucraina)
)

(defrule init
    (tara ?t)(culoare ?c)
    =>
    (assert (mapa (tara ?t)(culoare ?c)))
)


(defrule solutie
    (mapa (tara Romania)(culoare ?br&: (= galben ?br)))
    (mapa (tara Ungaria)(culoare ?fg &~ ?br))
    (mapa (tara Serbia)(culoare ?su &~ ?fg &~ ?br))
    (mapa (tara Bulgaria)(culoare ?gu &~ ?su &~ ?br))
    (mapa (tara Moldova)(culoare ?ve &~ ?gu &~?br))
    (mapa (tara Ucraina)(culoare ?co &~ ?ve &~ ?br))

    =>
    
    (printout t "Romania=" ?br "; ")
    (printout t "Ungaria=" ?fg "; ")
    (printout t "Serbia=" ?su "; ")
    (printout t "Bulgaria=" ?gu "; ")
    (printout t "Moldova=" ?ve "; ")
    (printout t "Ucraina=" ?co "; ")
  
)

(run)
