(deftemplate Automat(slot intrebare)(slot raspuns))

(assert (Automat(intrebare nil)(raspuns nil)))

(defrule r1
    (Automat(intrebare nil)(raspuns nil))
    
    =>
    (printout t "Cati centi ati introdus?" crlf)
    (bind ?r (read))
    (assert (Intreb (intrebare "Cati centi ati introdus")(raspuns ?r)))
)